<form action='/add' method="post">
  <label for="url">
    <input type="text" name="url" placeholder="URL">
  </label>
  <label for="title">
    <input type="text" name="title" placeholder="Title">
  </label>
  <input type="submit" value="Add">
</form>

<% if @url != nil %>
  <%= @title%>: <%=@url %> was added to your bookmarks.
<% end %>

<a href='/bookmarks'><button>View All Bookmarks</button></a>
